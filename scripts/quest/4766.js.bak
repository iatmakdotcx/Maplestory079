var huoqu = "#fUI/UIWindow.img/QuestIcon/4/0#";
var status = -1;

function start(mode, type, selection) {
    if (mode == -1) {
        qm.dispose();
    } else {
        if (mode == 1)
            status++;
        else
            status--;
        if (status == 0) {
            if (qm.getQuestStatus(4766) == 2) {
                qm.sendOk("你已经领取过奖励，继续努力到50级可以获得更多奖励喔");
                qm.forceCompleteQuest();
                qm.dispose();
            } else {
                qm.sendNext("恭喜你当前等级已经到达 #b40#k 级。\r\n\r\n" + huoqu + "  #v2022245# x 5");
            }
        } else if (status == 1) {
            qm.sendOk("下一次奖励为 #b50#k 级。");
	        qm.gainItem(2022245, 5);
            qm.forceCompleteQuest();
            qm.dispose();
        }
    }
}